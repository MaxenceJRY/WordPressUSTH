<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/follow_frag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.Reader.Following_example">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/row"
            android:layout_height="@dimen/row"
            app:cardCornerRadius="24dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profil_picture" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/color6B6B6B5"
                    android:id="@+id/tvWeb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:layout_weight="1"
                    android:text="site.wordpress.com" />

                <TextView
                    android:textColor="@color/color6B6B6B5"
                    android:id="@+id/textView36"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="top"
        android:layout_margin="12dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/imgTopic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/meat" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/tvTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="Title of the image"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:textColor="@color/color6B6B6B5"
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/lorem_ipsum"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row"
        android:layout_weight="4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/btn_save"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:background="@drawable/baseline_bookmark_24"
                android:button="@null"
                android:checked="false"
                android:paddingLeft="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:src="@drawable/retweet" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:src="@drawable/comment" />

            <TextView
                android:textColor="@color/color6B6B6B5"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="96" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/btn_like"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:button="@null"
                android:background="@drawable/baseline_favorite_24"
                android:checked="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:textColor="@color/color6B6B6B5"
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="126" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/disable"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>